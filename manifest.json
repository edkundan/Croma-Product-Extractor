{
  "manifest_version": 3,
  "name": "Croma Product Extractor",
  "version": "1.0",
  "description": "Extract product details from Croma product pages.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
